<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp">
        <TextView
            android:id="@+id/zhangdan_tv_item0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:textSize="16sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/zhangdan_tv_item1"
            style="@style/zhangdan_text" />

        <TextView
            android:id="@+id/zhangdan_tv_item2"
            style="@style/zhangdan_text" />

        <TextView
            android:id="@+id/zhangdan_tv_item3"
            style="@style/zhangdan_text" />

        <TextView
            android:id="@+id/zhangdan_tv_item4"
            style="@style/zhangdan_text" />

        <TextView
            android:id="@+id/zhangdan_tv_item5"
            style="@style/zhangdan_text" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_marginTop="5dp"
        android:background="@color/gray" />
</LinearLayout>